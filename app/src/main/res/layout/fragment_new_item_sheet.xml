<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="35sp"
        android:text="Add new item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_name_edit_text_view"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:hint="Enter item name"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/count_item_edit_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />


    <EditText
        android:id="@+id/count_item_edit_text_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:hint="1"
        android:inputType="numberDecimal"
        android:lines="1"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/item_name_edit_text_view"
        app:layout_constraintTop_toBottomOf="@id/title_text_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_item_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name_edit_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>