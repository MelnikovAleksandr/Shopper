<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slate_grey</item>
        <item name="colorPrimaryVariant">@color/blue_green_crayola</item>
        <item name="colorOnPrimary">@color/periwinkle_crayola</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/heather_purple</item>
        <item name="colorSecondaryVariant">@color/turkish_pink</item>
        <item name="colorOnSecondary">@color/amaranth_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>